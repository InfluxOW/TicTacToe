<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
    <description>PSR12</description>

    <arg name="basepath" value="."/>
    <arg name="colors"/>
    <arg name="parallel" value="100"/>
    <arg value="np"/>

    <file>src</file>

    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/src/Enums*</exclude-pattern>

    <rule ref="PSR12"/>
</ruleset>
